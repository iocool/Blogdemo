<!-- 页面通知部分 start -->
<div class="ui grid">
    <div class="four wide column"></div>
    <div class="eight wide column">

        <% if(success) { %>
            <div class="ui success message">
                <p><%= success %></p>
            </div>
        <% } %>

        <% if(error) { %>
            <div class="ui error message">
                <p><%= error %></p>
            </div>
        <% } %>

    </div>
</div>

<!-- 页面通知部分 end -->